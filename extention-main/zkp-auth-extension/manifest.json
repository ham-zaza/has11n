{
  "manifest_version": 3,
  "name": "ZK-Auth Login",
  "version": "1.0",
  "description": "Passwordless login using Zero-Knowledge Proofs",
  "permissions": ["storage"],
  "host_permissions": ["http://localhost:3000/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ZK-Auth"
  }
}